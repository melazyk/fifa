{
  "name": "Headers Sender",
  "version": "1.0",
  "description": "Send headers form tab to anohter url",
  "browser_action": {
      "default_icon": "images/red.png"
  },
  "permissions": [
      "webRequestBlocking",
      "webRequest",
      "storage",
      "http://*/*",
      "https://*/*"
  ],
  "background": {
     "scripts": ["background.js"],
     "persistent": true
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "manifest_version": 2
}
